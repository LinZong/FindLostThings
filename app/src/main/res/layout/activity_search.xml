<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
    >
        <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                           android:layout_height="?attr/actionBarSize"
                                           android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                           app:popupTheme="@style/Theme.AppCompat.Light"
                                           android:id="@+id/SearchLostThingToolbar"
                                           app:title="搜索失物信息">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                                android:fillViewport="true"
                                                android:id="@+id/OuterConstraint">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:background="#f5f5f5"
                                                     android:focusable="true"
                                                     android:focusableInTouchMode="true"

        >

            <com.jaredrummler.materialspinner.MaterialSpinner android:layout_width="0dp"
                                                              android:layout_height="35dp"
                                                              app:ms_padding_bottom="5dp"
                                                              app:ms_padding_top="5dp"
                                                              app:ms_padding_right="5dp"
                                                              app:ms_padding_left="5dp"
                                                              android:hint="选择物品的分类..."
                                                              app:layout_constraintStart_toStartOf="parent"
                                                              android:layout_marginStart="8dp"
                                                              android:id="@+id/ThingCategorySpinner"
                                                              android:layout_marginTop="8dp"
                                                              android:layout_marginBottom="16dp"
                                                              app:layout_constraintBottom_toTopOf="@+id/SchoolAreaSpinner"
                                                              app:layout_constraintTop_toTopOf="parent"/>
            <com.jaredrummler.materialspinner.MaterialSpinner android:layout_width="0dp"
                                                              android:layout_height="35dp"
                                                              app:ms_padding_bottom="5dp"
                                                              app:ms_padding_top="5dp"
                                                              app:ms_padding_right="5dp"
                                                              app:ms_padding_left="5dp"
                                                              android:hint="选择物品的细类..."
                                                              android:id="@+id/ThingDetailedSpinner"
                                                              app:layout_constraintStart_toEndOf="@+id/ThingCategorySpinner"
                                                              android:layout_marginStart="8dp"
                                                              app:layout_constraintBottom_toBottomOf="@+id/ThingCategorySpinner"
                                                              app:layout_constraintEnd_toEndOf="parent"
                                                              android:layout_marginEnd="8dp"
                                                              app:layout_constraintHorizontal_bias="0.0"/>


            <com.jaredrummler.materialspinner.MaterialSpinner android:layout_width="124dp"
                                                              android:maxLines="1"
                                                              android:ellipsize="end"
                                                              android:lines="1"
                                                              android:layout_height="35dp"
                                                              android:hint="选择校区..."
                                                              app:ms_padding_bottom="5dp"
                                                              app:ms_padding_top="5dp"
                                                              app:ms_padding_right="5dp"
                                                              app:ms_padding_left="5dp"
                                                              app:layout_constraintStart_toStartOf="parent"
                                                              android:layout_marginStart="8dp"
                                                              android:id="@+id/SchoolAreaSpinner"
                                                              android:layout_marginTop="8dp"
                                                              app:layout_constraintTop_toBottomOf="@+id/ThingCategorySpinner"/>
            <com.jaredrummler.materialspinner.MaterialSpinner android:layout_width="0dp"
                                                              android:layout_height="35dp"
                                                              android:hint="选择发现失物的地点..."
                                                              app:ms_padding_bottom="5dp"
                                                              app:ms_padding_top="5dp"
                                                              app:ms_padding_right="5dp"
                                                              app:ms_padding_left="5dp"
                                                              app:layout_constraintStart_toEndOf="@+id/SchoolAreaSpinner"
                                                              android:layout_marginStart="8dp"
                                                              app:layout_constraintBottom_toBottomOf="@+id/SchoolAreaSpinner"
                                                              android:id="@+id/SchoolBuildingSpinner"
                                                              app:layout_constraintEnd_toEndOf="parent"
                                                              android:layout_marginEnd="8dp"/>


            <android.support.constraint.ConstraintLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/PickStartDateLayout"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/SchoolAreaSpinner">

                <TextView
                        android:textColor="#000"
                        android:text="开始日期"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDate" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>
                <TextView
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDateTextView" app:layout_constraintStart_toEndOf="@+id/startDate"
                        android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/PickEndDateLayout"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/PickStartTimeLayout">

                <TextView
                        android:textColor="#000"
                        android:text="截止日期"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDate" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>
                <TextView
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDateTextView" app:layout_constraintStart_toEndOf="@+id/endDate"
                        android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="35dp"
                                                         android:background="@android:color/white"
                                                         app:layout_constraintTop_toBottomOf="@+id/PickStartDateLayout"
                                                         app:layout_constraintStart_toStartOf="parent"
                                                         app:layout_constraintEnd_toEndOf="parent"
                                                         android:layout_marginTop="16dp"
                                                         android:id="@+id/PickStartTimeLayout"
                                                         android:layout_marginStart="8dp"
                                                         android:layout_marginEnd="8dp">

                <TextView
                        android:textColor="#000"
                        android:text="开始时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startTime"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
                <TextView
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startTimeTextView"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/startTime" android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                         android:layout_height="35dp"
                                                         android:background="@android:color/white"
                                                         app:layout_constraintTop_toBottomOf="@+id/PickEndDateLayout"
                                                         app:layout_constraintStart_toStartOf="parent"
                                                         app:layout_constraintEnd_toEndOf="parent"
                                                         android:layout_marginTop="16dp"
                                                         android:id="@+id/PickEndTimeLayout"
                                                         android:layout_marginStart="8dp"
                                                         android:layout_marginEnd="8dp">

                <TextView
                        android:textColor="#000"
                        android:text="截止时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endTime"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
                <TextView
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endTimeTextView"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/endTime" android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>