<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.UserGuidanceActivity">

    <misaka.nemesiss.com.findlostthings.View.SwipeImageView android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:id="@+id/UserGuideSwiper"
    >
    </misaka.nemesiss.com.findlostthings.View.SwipeImageView>
    <Button
            android:visibility="gone"
            android:text="点此进入 朝花夕拾"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FinishUserGuide" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/UserGuideSwiper" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="#fff"
            android:textSize="17sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/login_button_radius"
            android:stateListAnimator="@null"
    />
</android.support.constraint.ConstraintLayout>