<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.ValidateGivenActivity">
    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
    >
        <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                           android:layout_height="?attr/actionBarSize"
                                           android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                           app:popupTheme="@style/Theme.AppCompat.Light"
                                           android:id="@+id/ValidateGivenToolbar"
                                           app:title="确认归还失物">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fillViewport="true"
                                            app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="请核对失主留存在服务器上的信息与前来认领的本人是否一致" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp">
        </TextView>
        <ImageView android:layout_width="200dp" android:layout_height="200dp"
                   android:layout_marginTop="40dp"
                   app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="8dp" android:id="@+id/ValidateIdentityImage"/>
        <TextView
                android:text="QQ:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/ValidateQQField"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/ValidateIdentityImage"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ValidateQQField" app:layout_constraintStart_toEndOf="@+id/textView16"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView16" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.5" android:text="暂无信息"/>
        <TextView
                android:text="微信:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/ValidateWxField"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView16"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ValidateWxField" app:layout_constraintStart_toEndOf="@+id/textView21"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView21" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:text="暂无信息"/>
        <TextView
                android:text="手机:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView23" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/ValidateMobileField"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ValidateMobileField" app:layout_constraintStart_toEndOf="@+id/textView23"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView23" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:text="暂无信息"/>
        <TextView
                android:text="邮箱:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/ValidateEmailField"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView23"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ValidateEmailField" app:layout_constraintStart_toEndOf="@+id/textView25"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView25" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:text="暂无信息"/>
        <TextView
                android:text="朝花夕拾团队提醒您: 请在将失物归还给失主之前谨慎地确认认领者的身份。特别是在交接一些如数码产品等贵重物品，避免冒领，错领等情况，辜负了您的一片好心。朝花夕拾团队感谢您使用此平台，感谢您在帮助失主寻回物品过程中做出的贡献。"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView27" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="#fff"
                android:stateListAnimator="@null"
                android:background="@drawable/login_button_radius"
                android:text="不是本人?告知我们!"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/NotValidReport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/ConfirmReturn"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginEnd="8dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView25"/>
        <Button
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="#fff"
                android:stateListAnimator="@null"
                android:background="@drawable/login_button_radius"
                android:text="确认归还"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/ConfirmReturn"
                app:layout_constraintStart_toEndOf="@+id/NotValidReport" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/NotValidReport"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>