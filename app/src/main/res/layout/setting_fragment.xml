<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
              android:layout_width="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="45dp"
                                                 android:id="@+id/push_notice"
                                                 android:background="@drawable/setting_item_press_bg"
                                                 android:clickable="true"
                                                 android:focusable="true"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:text="推送通知"
                  android:textColor="#000"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                  android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
        <android.support.v7.widget.SwitchCompat android:layout_width="42dp"
                                                android:layout_height="match_parent"
                                                android:id="@+id/Setting_NotificationSwitch"
                                                app:layout_constraintRight_toRightOf="@id/push_notice"
                                                tools:layout_editor_absoluteY="8dp" android:layout_marginRight="8dp">

        </android.support.v7.widget.SwitchCompat>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="45dp"
                                                 android:background="@drawable/setting_item_press_bg"
                                                 android:clickable="true"
                                                 android:focusable="true"
                                                 android:layout_marginTop="8dp"
                                                 android:id="@+id/EnterSetPhotoStoreLocation"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:text="照片存储位置"
                  android:textColor="#000"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_keyboard_arrow_right_black_24dp" app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="12dp" android:layout_marginTop="8dp"
                   app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="45dp"
                                                 android:background="@drawable/setting_item_press_bg"
                                                 android:clickable="true"
                                                 android:focusable="true"
                                                 android:layout_marginTop="8dp"
                                                 android:id="@+id/EnterCheckUpdate"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:text="检查更新"
                  android:textColor="#000"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_keyboard_arrow_right_black_24dp" app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="12dp" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="45dp"
                                                 android:background="@drawable/setting_item_press_bg"
                                                 android:clickable="true"
                                                 android:focusable="true"
                                                 android:layout_marginTop="8dp"
                                                 android:id="@+id/EnterAboutMe"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:text="关于朝花夕拾"
                  android:textColor="#000"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_keyboard_arrow_right_black_24dp" app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="12dp" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>

