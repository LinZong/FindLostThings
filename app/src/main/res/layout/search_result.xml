<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/Result_ImageView"
                android:layout_width="122dp"
                android:layout_height="79dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"/>
        <TextView
                android:text="标题"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Result_Title"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@+id/Result_ImageView"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="分类"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Result_ThingCategory"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/Result_Title"
                app:layout_constraintStart_toStartOf="@+id/Result_Title"/>
        <TextView
                android:text="细类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Result_ThingDetail"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/Result_ThingCategory"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/Result_ThingCategory"/>
        <TextView
                android:text="发布于: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_myPublish_lost_things_info_text4"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/Result_ThingCategory"
                app:layout_constraintStart_toStartOf="@+id/Result_ThingCategory"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Result_PublishTime"
                app:layout_constraintStart_toEndOf="@+id/search_myPublish_lost_things_info_text4"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/search_myPublish_lost_things_info_text4"
                app:layout_constraintEnd_toStartOf="@+id/Result_IsGiven" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:textSize="12sp"
        />
        <TextView
                android:text="未归还"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Result_IsGiven"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>


